{% macro default(message, icon, type, header) %}
    <div class="alert alert-{{ type }}" role="alert">
        {% if header %}
            <h4 class="alert-heading">{% if icon %} <i class="{{ icon }}"></i> {% endif %}{{ header }}</h4>
            {% set icon = null %}
        {% endif %}
        <p class="mb-0">{% if icon %} <i class="{{ icon }}"></i> {% endif %}{{ message }}</p>
    </div>
{% endmacro %}

{% macro info(message) %}
    {% import _self as messages %}
    {{ messages.default(message, 'icon icon-info-circled', 'info', 'Info') }}
{% endmacro %}

{% macro success(message) %}
    {% import _self as messages %}
    {{ messages.default(message, 'icon icon-check', 'success', 'Success') }}
{% endmacro %}

{% macro error(message) %}
    {% import _self as messages %}
    {{ messages.default(message, 'icon icon-attention', 'danger', 'Error') }}
{% endmacro %}

{% macro warning(message) %}
    {% import _self as messages %}
    {{ messages.default(message, 'icon icon-attention', 'warning', 'Warning') }}
{% endmacro %}
