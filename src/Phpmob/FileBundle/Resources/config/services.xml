<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="phpmob.registry.image_types" class="Phpmob\FileBundle\Registry\ImageTypeRegistry">
            <argument>%phpmob.image_filters%</argument>
        </service>

        <service id="phpmob.filesystem_uploader" class="Phpmob\FileBundle\Uploader\FilesystemUploader">
            <argument type="service">
                <service class="Gaufrette\Filesystem">
                    <argument>%phpmob.uploader.filesystem%</argument>
                    <factory service="knp_gaufrette.filesystem_map" method="get"/>
                </service>
            </argument>
        </service>

        <service id="phpmob.listener.upload_file" class="Phpmob\FileBundle\EventListener\UploadFileListener"
                 public="false">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="doctrine.event_subscriber"/>
        </service>

        <service id="phpmob.listener.orm_file_storage" class="Phpmob\FileBundle\EventListener\ORMFileStorageSubscriber"
                 public="false">
            <argument>%phpmob.uploader.dbal_table%</argument>
            <tag name="doctrine.event_subscriber"/>
        </service>

        <service id="phpmob.listener.doctrine_image_type_registry"
                 class="Phpmob\FileBundle\EventListener\DoctrineEventManagerImageTypeRegistryListener">
            <argument type="service" id="phpmob.registry.image_types"/>
            <tag name="doctrine.event_listener" event="imageTypeRegistry"/>
        </service>
    </services>
</container>
